<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/layout_user_walks"
    tools:context="shagold.wifwaf.UserWalksActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_walk"
        android:drawableLeft="@drawable/ic_add_circle_black_24dp"
        android:id="@+id/addNewWalkButton"
        android:layout_gravity="right"
        android:onClick="newWalk"/>

    <ListView
        android:id="@+id/walkUserListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:dividerHeight="4dp"/>

</LinearLayout>