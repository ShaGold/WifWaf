<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_user_dogs"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="shagold.wifwaf.UserDogsActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_add_dog"
        android:drawableLeft="@drawable/ic_add_circle_black_24dp"
        android:id="@+id/addDogButton"
        android:layout_gravity="right"
        android:onClick="addDog"/>

    <ListView
        android:id="@+id/dogListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:dividerHeight="2dp"/>

</LinearLayout>